{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "create",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^(?!\\s*$).+"
    },
    "dueDate": {
      "type": "string",
      "pattern": "^(?!\\s*$).+"
    },
    "description": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "pattern": "^(?!\\s*$).+"
    }
